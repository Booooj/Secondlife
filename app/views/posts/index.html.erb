<h1>お悩み事を質問</h1>
<div class="text">
<img alt="photo" src="/assets/answer.jpg"alt="フォト" width="300" height="300" />
  <h2><%= link_to("質問を投稿する" , "/posts/new") %>
  <p style="padding:20px">質問一覧</p></h2>
  <% @posts.each do |post| %>
      <div class="list">
           <p> <%= link_to(post.user.name, "/users/#{post.user.id}") %>さん</p>
         <p> <%= link_to(post.content, "/posts/#{post.id}") %></p>
        <p>回答：<%= post.comments.size %>件</p>
      </div>
    <% end %>
    </div>
