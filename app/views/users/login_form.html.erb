<div class="text">
        <% if @error_message %>
            <%= @error_message %>
        <% end %>
        <h1>ログイン</h1>
        <div class="form">
        <%= form_tag("/login") do %>
          <p>メールアドレス</p>
          <input name="email" value="<%= @email %>">
