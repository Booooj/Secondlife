<div class="text">
    <h1>アカウント編集</h1>
        <% @user.errors.full_messages.each do |message| %>
            <%= message %>
        <% end %>
        <%= form_tag("/users/#{@user.id}/update") do %>
          <p>ユーザー名</p>
          <input name="name" value="<%= @user.name %>">
          <p>メールアドレス</p>
          <input name="email" value="<%= @user.email %>">
         <p style="padding-top:10px"> <input type="submit" value="保存"></p>
        <% end %>
      </div>